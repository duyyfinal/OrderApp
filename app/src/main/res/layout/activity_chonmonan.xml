<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    tools:context=".ChonMonAnActivity">

    <Button
        android:id="@+id/buttonXemLai1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="#876445"
        android:fontFamily="@font/comfortaa_regular"
        android:text="Xem lại các món đã đặt"
        android:textColor="@color/normal_textcolor"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.01" />

    <Button
        android:id="@+id/buttonChondouong1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="#876445"
        android:fontFamily="@font/comfortaa_regular"
        android:text="Chọn đồ uống"
        android:textColor="@color/normal_textcolor"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/buttonXemLai1"
        app:layout_constraintVertical_bias="0.0" />

    <ListView
        android:id="@+id/listViewMonAn"
        android:layout_width="380dp"
        android:layout_height="500dp"
        android:layout_marginBottom="20dp"
        android:background="@drawable/duongvien_goctron"
        android:foregroundGravity="center"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/buttonChondouong1"
        app:layout_constraintVertical_bias="0.9">

    </ListView>
</androidx.constraintlayout.widget.ConstraintLayout>