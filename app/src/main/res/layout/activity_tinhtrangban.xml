<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:background="@drawable/bg"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/imageButton7"
            android:layout_width="wrap_content"
            android:layout_height="68dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:background="@null"
            app:srcCompat="@drawable/back"
            />

        <ImageView
            android:id="@+id/logoIV"
            android:layout_width="116dp"
            android:layout_height="match_parent"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="60dp"
            app:srcCompat="@drawable/logo"
            />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/banTV"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="159dp"
            android:background="@color/cardview_dark_background"
            android:text="Bàn 31"
            android:textColor="@color/cardview_light_background"
            android:textSize="30dp" />

    </LinearLayout>
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="280dp"
    android:orientation="vertical">
    <CheckBox
        android:id="@+id/trongCB"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:text="Trống"
        android:layout_marginLeft="50dp"
        android:textSize="30dp"/>
    <CheckBox
        android:id="@+id/coKhachCB"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:text="Có khách"
        android:textSize="30dp"
        android:layout_marginLeft="50dp"/>
    <CheckBox
        android:id="@+id/baoTriCB"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:text="Bảo trì"
        android:layout_marginLeft="50dp"
        android:textSize="30dp"/>
    <CheckBox
        android:id="@+id/datCB"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:text="Đặt "
        android:layout_marginLeft="50dp"
        android:textSize="30dp"/>
</LinearLayout>

    <Button
        android:id="@+id/tTDatBanBT"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:backgroundTint="@color/nau"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:text="clik vào đây để thêm thông tin đặt bàn"
        android:textSize="11dp" />

    <Button
        android:id="@+id/capNhatBT"
        android:layout_width="120dp"
        android:layout_height="50dp"
        android:layout_marginTop="57dp"
        android:layout_marginLeft="250dp"
        android:text="Cap nhat" />
</LinearLayout>