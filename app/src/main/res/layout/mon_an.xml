<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView

        android:id="@+id/textViewTenMon"
        android:textStyle="bold"
        android:textSize="20dp"
        android:text="Ten Mon"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/textViewGia"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="20dp"
        android:layout_toLeftOf="@+id/buttonThemMon"
        android:text="GiÃ¡"
        android:textSize="20dp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/buttonThemMon"
        android:layout_width="48dp"
        android:layout_height="wrap_content"
        android:backgroundTint="#876445"
        android:layout_marginRight="5dp"
        android:layout_marginTop="10dp"
        android:layout_toLeftOf="@+id/buttonBotMon"
        android:text="+" />

    <Button
        android:id="@+id/buttonBotMon"
        android:layout_width="48dp"
        android:layout_height="wrap_content"
        android:backgroundTint="#876445"
        android:layout_marginRight="10dp"
        android:layout_alignParentRight="true"
        android:layout_marginTop="10dp"
        android:text="-" />

</RelativeLayout>